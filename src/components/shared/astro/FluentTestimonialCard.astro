---
import { Icon } from "astro-icon/components";

interface Props {
  quote: string;
  author: string;
  role: string;
  avatar: string;
}

const { quote, author, role, avatar } = Astro.props as Props;
---

<div
  class='bg-white/10 backdrop-blur-2xl border border-white/20 shadow-[0_8px_32px_0_rgba(31,38,135,0.15)] p-6 rounded-lg transition-transform duration-300 hover:scale-105 animate-fade-in flex flex-col'
>
  <div class='flex items-start mb-4'>
    <Icon name='material-symbols:format-quote-rounded' class='w-8 h-8 text-brand-pink mr-3 flex-shrink-0' />
    <p class='text-text-muted italic flex-grow'>"{quote}"</p>
  </div>
  <div class='flex items-center mt-auto pt-4 border-t border-white/20'>
    <img src={avatar} alt={`Avatar de ${author}`} class='w-12 h-12 rounded-full mr-4 border-2 border-brand-pink' />
    <div>
      <p class='text-text-light font-bold'>{author}</p>
      <p class='text-text-muted text-sm'>{role}</p>
    </div>
  </div>
</div>
