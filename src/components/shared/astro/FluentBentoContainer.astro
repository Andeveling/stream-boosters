---
interface Props {
  columns?: 1 | 2 | 3 | 4;
  gap?: 'sm' | 'md' | 'lg';
  class?: string;
}

const { columns = 4, gap = 'md', class: className = '' } = Astro.props;

// Grid columns mapping
const columnClasses = {
  1: 'grid-cols-1',
  2: 'grid-cols-1 sm:grid-cols-2',
  3: 'grid-cols-1 sm:grid-cols-2 lg:grid-cols-3',
  4: 'grid-cols-1 sm:grid-cols-2 lg:grid-cols-4',
};

// Gap mapping
const gapClasses = {
  sm: 'gap-2 sm:gap-3',
  md: 'gap-3 sm:gap-4',
  lg: 'gap-4 sm:gap-6',
};

const gridClass = columnClasses[columns];
const gapClass = gapClasses[gap];
---

<div class:list={['w-full grid text-center', gridClass, gapClass, className]}>
  <slot />
</div>
