---
interface Props {
  /**
   * Heading level (h1-h6)
   */
  level?: 1 | 2 | 3 | 4 | 5 | 6;

  /**
   * Size variant independent of heading level
   */
  size?: 'sm' | 'md' | 'lg' | 'xl' | '2xl' | '3xl' | '4xl' | '5xl' | '6xl';

  /**
   * Glow effect variant
   */
  glow?: 'none' | 'subtle' | 'medium' | 'intense';

  /**
   * Animation variant
   */
  animation?: 'none' | 'fade-in' | 'slide-up' | 'type-effect' | 'glow-pulse';

  /**
   * Gradient variant for text
   */
  gradient?: 'primary' | 'secondary' | 'rainbow' | 'none';

  /**
   * Text alignment
   */
  align?: 'left' | 'center' | 'right';

  /**
   * Animation delay in milliseconds
   */
  delay?: number;

  /**
   * Additional CSS classes
   */
  class?: string;
}

const {
  level = 1,
  size = 'xl',
  glow = 'medium',
  animation = 'fade-in',
  gradient = 'none',
  align = 'center',
  delay = 0,
  class: className = '',
} = Astro.props as Props;

// Mobile-first responsive size classes following Tailwind CSS best practices
const sizeClasses = {
  sm: 'text-base sm:text-lg md:text-xl',
  md: 'text-lg sm:text-xl md:text-2xl',
  lg: 'text-xl sm:text-2xl md:text-3xl lg:text-4xl',
  xl: 'text-2xl sm:text-3xl md:text-4xl lg:text-5xl',
  '2xl': 'text-3xl sm:text-4xl md:text-5xl lg:text-6xl',
  '3xl': 'text-4xl sm:text-5xl md:text-6xl lg:text-7xl',
  '4xl': 'text-5xl sm:text-6xl md:text-7xl lg:text-8xl',
  '5xl': 'text-6xl sm:text-7xl md:text-8xl lg:text-9xl',
  '6xl': 'text-7xl sm:text-8xl md:text-9xl lg:text-[10rem]',
};

// Glow classes - Pure text-shadow approach (eliminates filter bleeding)
const glowClasses = {
  none: '',
  subtle: 'glow-text-subtle',
  medium: 'glow-text-medium',
  intense: 'glow-text-intense',
};

// Animation classes
const animationClasses = {
  none: '',
  'fade-in': 'animate-fade-in',
  'slide-up': 'animate-slide-up',
  'type-effect': 'animate-type-effect',
  'glow-pulse': 'animate-glow-pulse',
};

// Gradient classes
const gradientClasses = {
  primary:
    'bg-gradient-to-r from-brand-pink to-brand-purple bg-clip-text text-transparent',
  secondary:
    'bg-gradient-to-r from-brand-purple to-brand-cyan bg-clip-text text-transparent',
  rainbow:
    'bg-gradient-to-r from-brand-pink via-brand-cyan to-brand-purple bg-clip-text text-transparent',
  none: 'text-text-light',
};

// Alignment classes
const alignClasses = {
  left: 'text-left',
  center: 'text-center',
  right: 'text-right',
};

const headingClasses = [
  'font-black tracking-tighter',
  'transition-all duration-500',
  'will-change-transform', // Optimize for animations
  'isolation-isolate', // Prevent filter bleeding
  sizeClasses[size],
  glowClasses[glow],
  animationClasses[animation],
  gradientClasses[gradient],
  alignClasses[align],
  className,
]
  .filter(Boolean)
  .join(' ');

const Element = `h${level}` as keyof HTMLElementTagNameMap;
---

<Element class={headingClasses} style={delay > 0 ? `animation-delay: ${delay}ms` : undefined}>
  <slot />
</Element>

<style>
  /* Pure text-shadow glow effects - No filter issues */
  .glow-text-subtle {
    text-shadow:
      0 0 10px rgba(255, 45, 146, 0.3),
      0 0 20px rgba(255, 45, 146, 0.2),
      0 0 30px rgba(139, 92, 246, 0.1);
  }

  .glow-text-medium {
    text-shadow:
      0 0 15px rgba(255, 45, 146, 0.4),
      0 0 30px rgba(255, 45, 146, 0.3),
      0 0 45px rgba(139, 92, 246, 0.2),
      0 0 60px rgba(6, 182, 212, 0.1);
  }

  .glow-text-intense {
    /* Múltiples capas de sombra con degradado suave - Sin bordes cuadrados */
    text-shadow:
      /* Capa interna - muy suave */
      0 0 5px rgba(255, 45, 146, 0.8),
      0 0 10px rgba(255, 45, 146, 0.6),
      0 0 15px rgba(255, 45, 146, 0.4),
      
      /* Capa media - transición */
      0 0 25px rgba(139, 92, 246, 0.3),
      0 0 35px rgba(139, 92, 246, 0.2),
      
      /* Capa externa - muy difusa */
      0 0 50px rgba(6, 182, 212, 0.15),
      0 0 75px rgba(6, 182, 212, 0.1),
      0 0 100px rgba(255, 45, 146, 0.05);
    
    /* Eliminar cualquier overflow que pueda crear bordes */
    overflow: visible;
    
    /* Optimización para rendering suave */
    filter: blur(0); /* Fuerza anti-aliasing */
    
    /* Mejor composición de capas */
    isolation: isolate;
    mix-blend-mode: normal;
    
    /* Eliminar cualquier borde sharp */
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* Advanced animations - Optimized for performance */
  @keyframes type-effect {
    0% {
      width: 0;
      opacity: 0;
    }
    50% {
      opacity: 1;
    }
    100% {
      width: 100%;
      opacity: 1;
    }
  }

  @keyframes glow-pulse {
    0%, 100% { 
      opacity: 0.9;
      text-shadow:
        0 0 5px rgba(255, 45, 146, 0.8),
        0 0 10px rgba(255, 45, 146, 0.6),
        0 0 15px rgba(255, 45, 146, 0.4),
        0 0 25px rgba(139, 92, 246, 0.3),
        0 0 35px rgba(139, 92, 246, 0.2),
        0 0 50px rgba(6, 182, 212, 0.15),
        0 0 75px rgba(6, 182, 212, 0.1),
        0 0 100px rgba(255, 45, 146, 0.05);
    }
    50% { 
      opacity: 1;
      text-shadow:
        0 0 8px rgba(255, 45, 146, 1),
        0 0 16px rgba(255, 45, 146, 0.8),
        0 0 24px rgba(255, 45, 146, 0.6),
        0 0 40px rgba(139, 92, 246, 0.5),
        0 0 60px rgba(139, 92, 246, 0.3),
        0 0 80px rgba(6, 182, 212, 0.25),
        0 0 120px rgba(6, 182, 212, 0.15),
        0 0 160px rgba(255, 45, 146, 0.08);
    }
  }

  .animate-type-effect {
    overflow: hidden;
    white-space: nowrap;
    animation: type-effect 2s ease-out forwards;
  }

  .animate-glow-pulse {
    animation: glow-pulse 3s ease-in-out infinite;
    
    /* Optimizaciones de performance */
    will-change: opacity, text-shadow;
    transform: translateZ(0); /* GPU layer */
    backface-visibility: hidden;
    
    /* Eliminar cualquier borde sharp */
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* Ensure proper isolation */
  .isolation-isolate {
    isolation: isolate;
  }
</style>
