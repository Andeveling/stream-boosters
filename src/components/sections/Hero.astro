---
import FluentSection from "../shared/astro/FluentSection.astro";
import FluentBadge from "../shared/astro/FluentBadge.astro";
import FluentButton from "../shared/astro/FluentButton.astro";
import FluentHeading from "../shared/astro/FluentHeading.astro";
import FluentText from "../shared/astro/FluentText.astro";
---

<FluentSection
  id="hero"
  backgroundVariant="abstract"
  depth="deep"
  animation="fade-in"
  padding="xl"
  align="center"
  backgroundImage="/src/assets/background.svg"
  backgroundIcons={[
    {
      name: "material-symbols:gamepad-outline-rounded",
      position: "top-left",
      size: "md",
      color: "purple",
      rotation: 12,
      blur: true
    },
    {
      name: "material-symbols:play-circle-outline-rounded",
      position: "bottom-right",
      size: "lg",
      color: "pink",
      rotation: -12,
      blur: true
    },
    {
      name: "material-symbols:share",
      position: "center",
      size: "lg",
      color: "cyan",
      rotation: 6,
      blur: true
    }
  ]}
>
  <!-- Status Badge -->
  <FluentBadge
    variant="glass"
    size="md"
    showPulse={true}
    pulseColor="cyan"
    text="Conectando marcas con audiencias en vivo"
    class="mb-8"
  />

  <!-- Main Heading -->
  <FluentHeading
    level={1}
    size="4xl"
    gradient="none"
    align="center"
    class="mb-6"
  >
    Tu proyecto frente a una <span class="text-brand-pink">audiencia real</span>
  </FluentHeading>

  <!-- Description Text -->
  <FluentText
    size="base"
    variant="muted"
    align="center"
    maxWidth="3xl"
    margin="lg"
  >
    Conecta con una red de <strong class="bg-gradient-to-r from-brand-pink via-brand-cyan to-brand-purple bg-clip-text text-transparent">streamers de audiencias reales</strong>, pequeñas y medianas, para maximizar el impacto de tus promociones de manera orgánica.
  </FluentText>
  
  <!-- Call to Action Buttons -->
  <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
    <FluentButton
      href="#packages"
      variant="primary"
      size="lg"
      text="Ver Paquetes"
      fullWidth={false}
    />
    
    <FluentButton
      href="#how-it-works"
      variant="outline"
      size="lg"
      icon="material-symbols:rocket-launch-outline-rounded"
      iconPosition="left"
      text="Cómo Funciona"
      fullWidth={false}
    />
  </div>
</FluentSection>
