---
import { Icon } from "astro-icon/components"
import FluentGlowHeading from "../shared/astro/FluentGlowHeading.astro"
import FluentHeroButton from "../shared/astro/FluentHeroButton.astro"
import FluentSection from "../shared/astro/FluentSection.astro"
import FluentText from "../shared/astro/FluentText.astro"
---

<FluentSection
  id='hero'
  backgroundVariant='default'
  depth='deep'
  animation='none'
  padding='sm'
  align='center'
  class='relative min-h-screen flex items-center bg-hero-radial overflow-hidden hero-full-width hero-with-header'
>
  <!-- Enhanced Background Effects -->
  <div class='absolute inset-0 layer-background'>
    <!-- Animated gradient background -->
    <div class='absolute inset-0 bg-gradient-to-br from-brand-darker via-brand-dark to-brand-darker opacity-90'></div>

    <!-- Main background image with parallax effect -->
    <div class='absolute inset-0 bg-cover bg-center opacity-5 blur-sm animate-pulse-glow' style="background-image: url('/src/assets/background.svg');"></div>
  </div>

  <!-- Floating Orbs Layer - Mobile optimized -->
  <div class='absolute inset-0 layer-effects'>
    <!-- Large gradient orbs - mobile-first responsive -->
    <div
      class='absolute top-1/4 left-1/4 w-48 h-48 sm:w-64 sm:h-64 md:w-80 md:h-80 lg:w-96 lg:h-96 bg-gradient-radial from-brand-pink/20 to-transparent rounded-full blur-3xl animate-orb-float'
      style='animation-delay: 0s;'
    >
    </div>
    <div
      class='absolute bottom-1/4 right-1/4 w-40 h-40 sm:w-56 sm:h-56 md:w-72 md:h-72 lg:w-80 lg:h-80 bg-gradient-radial from-brand-purple/25 to-transparent rounded-full blur-3xl animate-orb-float'
      style='animation-delay: 2s;'
    >
    </div>
    <div
      class='absolute top-1/2 right-1/3 w-32 h-32 sm:w-48 sm:h-48 md:w-56 md:h-56 lg:w-64 lg:h-64 bg-gradient-radial from-brand-cyan/15 to-transparent rounded-full blur-2xl animate-orb-float'
      style='animation-delay: 4s;'
    >
    </div>
  </div>

  <!-- Enhanced Background Icons - Mobile optimized -->
  <div class='absolute inset-0 layer-icons opacity-8'>
    <!-- Gaming icons with advanced animations - mobile-first responsive sizes -->
    <Icon
      name='material-symbols:gamepad-outline-rounded'
      class='absolute w-16 h-16 sm:w-24 sm:h-24 md:w-32 md:h-32 lg:w-40 lg:h-40 xl:w-48 xl:h-48 text-brand-purple blur-sm top-1/4 left-1/4 -translate-x-1/2 -translate-y-1/2 rotate-12 animate-orb-float magnetic-hover'
      style='animation-delay: 1s;'
    />

    <Icon
      name='material-symbols:play-circle-outline-rounded'
      class='absolute w-20 h-20 sm:w-28 sm:h-28 md:w-36 md:h-36 lg:w-48 lg:h-48 xl:w-64 xl:h-64 text-brand-pink blur-sm bottom-1/4 right-1/4 translate-x-1/2 translate-y-1/2 -rotate-12 animate-orb-float magnetic-hover'
      style='animation-delay: 3s;'
    />

    <Icon
      name='material-symbols:share'
      class='absolute w-18 h-18 sm:w-26 sm:h-26 md:w-32 md:h-32 lg:w-44 lg:h-44 xl:w-56 xl:h-56 text-brand-cyan blur-sm top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 rotate-6 animate-orb-float magnetic-hover'
      style='animation-delay: 5s;'
    />

    <!-- Additional decorative icons - progressively revealed -->
    <Icon
      name='material-symbols:trending-up-rounded'
      class='hidden sm:block absolute w-14 h-14 md:w-20 md:h-20 lg:w-24 lg:h-24 xl:w-32 xl:h-32 text-brand-cyan/60 blur-sm top-1/3 right-1/5 rotate-45 animate-orb-float'
      style='animation-delay: 2.5s;'
    />

    <Icon
      name='material-symbols:groups-rounded'
      class='hidden md:block absolute w-16 h-16 lg:w-22 lg:h-22 xl:w-28 xl:h-28 2xl:w-40 2xl:h-40 text-brand-purple/50 blur-sm bottom-1/3 left-1/5 -rotate-30 animate-orb-float'
      style='animation-delay: 4.5s;'
    />
  </div>

  <!-- Main Content with Sequential Animations - Mobile-first approach -->
  <div class='relative layer-content w-full flex flex-col justify-center items-center px-4 sm:px-6 md:px-8 lg:px-12 py-12 sm:py-16 md:py-20'>
    <div class='w-full max-w-xs sm:max-w-2xl md:max-w-4xl lg:max-w-6xl xl:max-w-7xl mx-auto text-center'>
      <!-- Enhanced Status Badge - Mobile optimized -->
      <div class='animate-fade-in animate-stagger-1 mb-4 sm:mb-6 md:mb-8'>
        <div
          class='inline-flex items-center justify-center bg-brand-card/30 backdrop-blur-md border-2 border-brand-cyan/20 shadow-2xl shadow-brand-cyan/20 rounded-full px-3 sm:px-4 md:px-6 py-1.5 sm:py-2 md:py-3 transition-all duration-300 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-brand-pink/50'
        >
          <div class='relative flex items-center justify-center w-2.5 h-2.5 sm:w-3 sm:h-3 md:w-4 md:h-4 mr-1.5 sm:mr-2 md:mr-3'>
            <div class='absolute inline-flex w-full h-full rounded-full bg-brand-cyan opacity-75 animate-ping'></div>
            <div class='relative inline-flex w-1 h-1 sm:w-1.5 sm:h-1.5 md:w-2 md:h-2 rounded-full bg-brand-cyan'></div>
          </div>
          <span class='text-text-muted font-medium text-xs sm:text-sm md:text-base lg:text-lg'>Conectando marcas con audiencias en vivo</span>
        </div>
      </div>

      <!-- Main Hero Heading with Glow Effect - Mobile-first -->
      <div class='animate-text-reveal animate-stagger-2 mb-4 sm:mb-6 md:mb-8'>
        <FluentGlowHeading level={1} size='4xl' glow='intense' animation='glow-pulse' gradient='none' align='center' delay={400} class='leading-tight px-2 sm:px-4 md:px-6'>
          Tu proyecto frente a una <span class='bg-gradient-to-r from-brand-pink via-brand-cyan to-brand-purple bg-clip-text text-transparent animate-gradient-shift bg-size-200'
            >audiencia real</span
          >
        </FluentGlowHeading>
      </div>

      <!-- Enhanced Description - Mobile optimized -->
      <div class='animate-slide-up animate-stagger-3 mb-6 sm:mb-8 md:mb-10'>
        <FluentText size='lg' variant='muted' align='center' maxWidth='4xl' margin='lg' class='leading-relaxed text-text-light/90 backdrop-blur-sm px-2 sm:px-4 md:px-6'>
          Conecta con una red de <strong class='bg-gradient-to-r from-brand-pink via-brand-cyan to-brand-purple bg-clip-text text-transparent font-bold'
            >streamers de audiencias reales</strong
          >, pequeñas y medianas, para maximizar el impacto de tus promociones de manera orgánica y auténtica.
        </FluentText>
      </div>

      <!-- Enhanced Call to Action Buttons - Mobile-first responsive with equal width -->
      <div class='buttons-equal-width animate-scale-in animate-stagger-4 mb-8 sm:mb-12 md:mb-16 lg:mb-20 px-2 sm:px-0'>
        <FluentHeroButton
          href='#packages'
          variant='hero-primary'
          size='xl'
          icon='material-symbols:rocket-launch-rounded'
          iconPosition='left'
          text='Ver Paquetes'
          effect='glow-pulse'
          delay={800}
          class='button-text-control'
        />

        <FluentHeroButton
          href='#how-it-works'
          variant='hero-secondary'
          size='xl'
          icon='material-symbols:rocket-launch-outline-rounded'
          iconPosition='left'
          text='Cómo Funciona'
          effect='float'
          delay={1000}
          class='button-text-control'
        />
      </div>

      <!-- Interactive Stats Preview - Mobile-first grid -->
      <div
        class='grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 sm:gap-4 md:gap-6 lg:gap-8 animate-fade-in animate-stagger-5 max-w-sm sm:max-w-none md:max-w-4xl lg:max-w-6xl mx-auto px-2 sm:px-4'
      >
        <div
          class='bg-brand-card/20 backdrop-blur-sm rounded-lg sm:rounded-xl md:rounded-2xl p-4 sm:p-6 md:p-8 border border-brand-purple/20 hover:border-brand-pink/40 transition-all duration-500 hover:scale-105 stats-card group'
        >
          <div class='flex items-center justify-center mb-2 sm:mb-3 md:mb-4'>
            <Icon name='material-symbols:groups-rounded' class='w-5 h-5 sm:w-6 sm:h-6 md:w-8 md:h-8 text-brand-pink group-hover:scale-110 transition-transform duration-300' />
          </div>
          <div class='text-2xl sm:text-3xl md:text-4xl font-bold text-brand-pink mb-1 sm:mb-2 md:mb-3 text-center'>500+</div>
          <div class='text-text-muted text-center font-medium text-xs sm:text-sm md:text-base'>Streamers Activos</div>
        </div>

        <div
          class='bg-brand-card/20 backdrop-blur-sm rounded-lg sm:rounded-xl md:rounded-2xl p-4 sm:p-6 md:p-8 border border-brand-cyan/20 hover:border-brand-purple/40 transition-all duration-500 hover:scale-105 stats-card group'
        >
          <div class='flex items-center justify-center mb-2 sm:mb-3 md:mb-4'>
            <Icon name='material-symbols:visibility-rounded' class='w-5 h-5 sm:w-6 sm:h-6 md:w-8 md:h-8 text-brand-cyan group-hover:scale-110 transition-transform duration-300' />
          </div>
          <div class='text-2xl sm:text-3xl md:text-4xl font-bold text-brand-cyan mb-1 sm:mb-2 md:mb-3 text-center'>50K+</div>
          <div class='text-text-muted text-center font-medium text-xs sm:text-sm md:text-base'>Audiencia Combinada</div>
        </div>

        <div
          class='bg-brand-card/20 backdrop-blur-sm rounded-lg sm:rounded-xl md:rounded-2xl p-4 sm:p-6 md:p-8 border border-brand-pink/20 hover:border-brand-cyan/40 transition-all duration-500 hover:scale-105 stats-card group sm:col-span-2 lg:col-span-1'
        >
          <div class='flex items-center justify-center mb-2 sm:mb-3 md:mb-4'>
            <Icon name='material-symbols:thumb-up-rounded' class='w-5 h-5 sm:w-6 sm:h-6 md:w-8 md:h-8 text-brand-purple group-hover:scale-110 transition-transform duration-300' />
          </div>
          <div class='text-2xl sm:text-3xl md:text-4xl font-bold text-brand-purple mb-1 sm:mb-2 md:mb-3 text-center'>95%</div>
          <div class='text-text-muted text-center font-medium text-xs sm:text-sm md:text-base'>Satisfacción Cliente</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Enhanced Scroll Indicator - Mobile optimized -->
  <div class='absolute bottom-4 sm:bottom-6 md:bottom-8 left-1/2 -translate-x-1/2 layer-interactive z-20'>
    <div
      class='flex flex-col items-center gap-1.5 sm:gap-2 md:gap-3 group scroll-indicator cursor-pointer'
      onclick="document.getElementById('how-it-works')?.scrollIntoView({behavior: 'smooth'})"
    >
      <!-- Modern scroll indicator with enhanced design -->
      <div
        class='relative w-5 h-8 sm:w-6 sm:h-10 md:w-8 md:h-14 border-2 border-brand-cyan/60 rounded-full flex flex-col justify-start items-center py-1 sm:py-1.5 md:py-2 group-hover:border-brand-pink/80 transition-all duration-300 bg-brand-card/20 backdrop-blur-sm shadow-lg shadow-brand-cyan/20'
      >
        <div class='w-0.5 h-1.5 sm:w-0.5 sm:h-2 md:w-1 md:h-3 bg-brand-pink rounded-full animate-bounce group-hover:bg-brand-cyan transition-colors duration-300'></div>
      </div>

      <!-- Enhanced label with glow effect -->
      <div class='flex flex-col items-center'>
        <span class='text-brand-cyan/80 text-xs sm:text-sm font-medium group-hover:text-brand-pink/80 transition-all duration-300 tracking-wide'>Descubre más</span>
        <div
          class='w-3 sm:w-4 md:w-6 h-0.5 bg-gradient-to-r from-transparent via-brand-cyan/50 to-transparent group-hover:via-brand-pink/50 transition-all duration-300 mt-0.5 sm:mt-1'
        >
        </div>
      </div>
    </div>
  </div>
</FluentSection>
