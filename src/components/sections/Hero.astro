---
import FluentSection from "../shared/astro/FluentSection.astro";
import FluentBadge from "../shared/astro/FluentBadge.astro";
import FluentGlowHeading from "../shared/astro/FluentGlowHeading.astro";
import FluentText from "../shared/astro/FluentText.astro";
import FluentHeroButton from "../shared/astro/FluentHeroButton.astro";
import FluentParticles from "../shared/astro/FluentParticles.astro";
import { Icon } from "astro-icon/components";
---

<FluentSection
  id="hero"
  backgroundVariant="default"
  depth="deep"
  animation="none"
  padding="xl"
  align="center"
  class="relative min-h-screen flex items-center bg-hero-radial overflow-hidden"
>
  <!-- Enhanced Background Effects -->
  <div class="absolute inset-0 layer-background">
    <!-- Animated gradient background -->
    <div class="absolute inset-0 bg-gradient-to-br from-brand-darker via-brand-dark to-brand-darker opacity-90"></div>
    
    <!-- Main background image with parallax effect -->
    <div 
      class="absolute inset-0 bg-cover bg-center opacity-5 blur-sm animate-pulse-glow" 
      style="background-image: url('/src/assets/background.svg');"
    ></div>
  </div>

  <!-- Floating Orbs Layer -->
  <div class="absolute inset-0 layer-effects">
    <!-- Large gradient orbs -->
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-gradient-radial from-brand-pink/20 to-transparent rounded-full blur-3xl animate-orb-float" style="animation-delay: 0s;"></div>
    <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-gradient-radial from-brand-purple/25 to-transparent rounded-full blur-3xl animate-orb-float" style="animation-delay: 2s;"></div>
    <div class="absolute top-1/2 right-1/3 w-64 h-64 bg-gradient-radial from-brand-cyan/15 to-transparent rounded-full blur-2xl animate-orb-float" style="animation-delay: 4s;"></div>
  </div>

  <!-- Floating Particles -->
  <FluentParticles 
    count={12}
    speed="medium"
    colors={['pink', 'purple', 'cyan']}
    sizes={['sm', 'md']}
  />

  <!-- Enhanced Background Icons -->
  <div class="absolute inset-0 layer-icons opacity-8">
    <!-- Gaming icons with advanced animations -->
    <Icon 
      name="material-symbols:gamepad-outline-rounded" 
      class="absolute w-32 h-32 md:w-48 md:h-48 text-brand-purple blur-sm top-1/4 left-1/4 -translate-x-1/2 -translate-y-1/2 rotate-12 animate-orb-float magnetic-hover" 
      style="animation-delay: 1s;"
    />
    
    <Icon 
      name="material-symbols:play-circle-outline-rounded" 
      class="absolute w-40 h-40 md:w-64 md:h-64 text-brand-pink blur-sm bottom-1/4 right-1/4 translate-x-1/2 translate-y-1/2 -rotate-12 animate-orb-float magnetic-hover" 
      style="animation-delay: 3s;"
    />
    
    <Icon 
      name="material-symbols:share" 
      class="absolute w-36 h-36 md:w-56 md:h-56 text-brand-cyan blur-sm top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 rotate-6 animate-orb-float magnetic-hover" 
      style="animation-delay: 5s;"
    />
    
    <!-- Additional decorative icons -->
    <Icon 
      name="material-symbols:trending-up-rounded" 
      class="absolute w-24 h-24 md:w-32 md:h-32 text-brand-cyan/60 blur-sm top-1/3 right-1/5 rotate-45 animate-orb-float" 
      style="animation-delay: 2.5s;"
    />
    
    <Icon 
      name="material-symbols:groups-rounded" 
      class="absolute w-28 h-28 md:w-40 md:h-40 text-brand-purple/50 blur-sm bottom-1/3 left-1/5 -rotate-30 animate-orb-float" 
      style="animation-delay: 4.5s;"
    />
  </div>

  <!-- Main Content with Sequential Animations -->
  <div class="relative layer-content w-full max-w-6xl mx-auto">
    <!-- Enhanced Status Badge -->
    <div class="animate-fade-in animate-stagger-1">
      <FluentBadge
        variant="glass"
        size="lg"
        showPulse={true}
        pulseColor="cyan"
        text="üî• Conectando marcas con audiencias en vivo"
        class="mb-8 backdrop-blur-md border-2 border-brand-cyan/20 shadow-2xl shadow-brand-cyan/20"
      />
    </div>

    <!-- Main Hero Heading with Glow Effect -->
    <div class="animate-text-reveal animate-stagger-2">
      <FluentGlowHeading
        level={1}
        size="6xl"
        glow="intense"
        animation="glow-pulse"
        gradient="none"
        align="center"
        delay={400}
        class="mb-8 leading-tight"
      >
        Tu proyecto frente a una <span class="bg-gradient-to-r from-brand-pink via-brand-cyan to-brand-purple bg-clip-text text-transparent animate-gradient-shift bg-size-200">audiencia real</span>
      </FluentGlowHeading>
    </div>

    <!-- Enhanced Description -->
    <div class="animate-slide-up animate-stagger-3">
      <FluentText
        size="xl"
        variant="muted"
        align="center"
        maxWidth="4xl"
        margin="lg"
        class="leading-relaxed text-text-light/90 backdrop-blur-sm"
      >
        Conecta con una red de <strong class="bg-gradient-to-r from-brand-pink via-brand-cyan to-brand-purple bg-clip-text text-transparent font-bold">streamers de audiencias reales</strong>, peque√±as y medianas, para maximizar el impacto de tus promociones de manera org√°nica y aut√©ntica.
      </FluentText>
    </div>
    
    <!-- Enhanced Call to Action Buttons -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-6 animate-scale-in animate-stagger-4">
      <FluentHeroButton
        href="#packages"
        variant="hero-primary"
        size="xl"
        text="üöÄ Ver Paquetes"
        effect="glow-pulse"
        delay={800}
        class="w-full sm:w-auto min-w-[200px]"
      />
      
      <FluentHeroButton
        href="#how-it-works"
        variant="hero-secondary"
        size="xl"
        icon="material-symbols:rocket-launch-outline-rounded"
        iconPosition="left"
        text="C√≥mo Funciona"
        effect="float"
        delay={1000}
        class="w-full sm:w-auto min-w-[200px]"
      />
    </div>

    <!-- Interactive Stats Preview -->
    <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-6 animate-fade-in animate-stagger-5">
      <div class="bg-brand-card/20 backdrop-blur-sm rounded-2xl p-6 border border-brand-purple/20 hover:border-brand-pink/40 transition-all duration-500 hover:scale-105 magnetic-hover">
        <div class="text-3xl font-bold text-brand-pink mb-2">500+</div>
        <div class="text-text-muted">Streamers Activos</div>
      </div>
      
      <div class="bg-brand-card/20 backdrop-blur-sm rounded-2xl p-6 border border-brand-cyan/20 hover:border-brand-purple/40 transition-all duration-500 hover:scale-105 magnetic-hover">
        <div class="text-3xl font-bold text-brand-cyan mb-2">50K+</div>
        <div class="text-text-muted">Audiencia Combinada</div>
      </div>
      
      <div class="bg-brand-card/20 backdrop-blur-sm rounded-2xl p-6 border border-brand-pink/20 hover:border-brand-cyan/40 transition-all duration-500 hover:scale-105 magnetic-hover">
        <div class="text-3xl font-bold text-brand-purple mb-2">95%</div>
        <div class="text-text-muted">Satisfacci√≥n Cliente</div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 layer-interactive animate-bounce">
    <div class="w-6 h-10 border-2 border-brand-cyan/50 rounded-full flex justify-center">
      <div class="w-1 h-3 bg-brand-cyan rounded-full mt-2 animate-pulse"></div>
    </div>
    <div class="text-xs text-brand-cyan/70 mt-2 text-center">Scroll</div>
  </div>
</FluentSection>
