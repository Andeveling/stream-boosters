---
import { Icon } from "astro-icon/components"
import FluentHeading from "../shared/astro/FluentHeading.astro"
import FluentHeroButton from "../shared/astro/FluentHeroButton.astro"
import FluentSection from "../shared/astro/FluentSection.astro"
import FluentText from "../shared/astro/FluentText.astro"
---

<FluentSection
  id='hero'
  backgroundVariant='default'
  depth='deep'
  animation='none'
  padding='sm'
  align='center'
  class='relative min-h-screen flex items-center bg-hero-radial overflow-hidden hero-full-width hero-with-header'
>
  <!-- Enhanced Background Effects -->
  <div class='absolute inset-0 layer-background'>
    <!-- Animated gradient background -->
    <div class='absolute inset-0 bg-gradient-to-br from-brand-darker via-brand-dark to-brand-darker opacity-90'></div>

    <!-- Main background image with parallax effect -->
    <div class='absolute inset-0 bg-cover bg-center opacity-5 blur-sm animate-pulse-glow' style="background-image: url('/src/assets/background.svg');"></div>
  </div>

  <!-- Floating Orbs Layer - Mobile optimized -->
  <div class='absolute inset-0 layer-effects isolation-isolate'>
    <!-- Large gradient orbs - mobile-first responsive -->
    <div
      class='absolute top-1/4 left-1/4 w-48 h-48 sm:w-64 sm:h-64 md:w-80 md:h-80 lg:w-96 lg:h-96 bg-gradient-radial from-brand-pink/15 to-transparent rounded-full blur-3xl animate-orb-float will-change-transform'
      style='animation-delay: 0s; transform: translateZ(0);'
    >
    </div>
    <div
      class='absolute bottom-1/4 right-1/4 w-40 h-40 sm:w-56 sm:h-56 md:w-72 md:h-72 lg:w-80 lg:h-80 bg-gradient-radial from-brand-purple/20 to-transparent rounded-full blur-3xl animate-orb-float will-change-transform'
      style='animation-delay: 2s; transform: translateZ(0);'
    >
    </div>
    <div
      class='absolute top-1/2 right-1/3 w-32 h-32 sm:w-48 sm:h-48 md:w-56 md:h-56 lg:w-64 lg:h-64 bg-gradient-radial from-brand-cyan/12 to-transparent rounded-full blur-2xl animate-orb-float will-change-transform'
      style='animation-delay: 4s; transform: translateZ(0);'
    >
    </div>
  </div>

  <!-- Enhanced Background Icons - Mobile optimized -->
  <div class='absolute inset-0 layer-icons opacity-8 isolation-isolate'>
    <!-- Gaming icons with advanced animations - mobile-first responsive sizes -->
    <Icon
      name='material-symbols:gamepad-outline-rounded'
      class='absolute w-16 h-16 sm:w-24 sm:h-24 md:w-32 md:h-32 lg:w-40 lg:h-40 xl:w-48 xl:h-48 text-brand-purple blur-sm top-1/4 left-1/4 -translate-x-1/2 -translate-y-1/2 rotate-12 animate-orb-float magnetic-hover will-change-transform'
      style='animation-delay: 1s; transform: translateZ(0);'
    />

    <Icon
      name='material-symbols:play-circle-outline-rounded'
      class='absolute w-20 h-20 sm:w-28 sm:h-28 md:w-36 md:h-36 lg:w-48 lg:h-48 xl:w-64 xl:h-64 text-brand-pink blur-sm bottom-1/4 right-1/4 translate-x-1/2 translate-y-1/2 -rotate-12 animate-orb-float magnetic-hover will-change-transform'
      style='animation-delay: 3s; transform: translateZ(0);'
    />

    <Icon
      name='material-symbols:share'
      class='absolute w-18 h-18 sm:w-26 sm:h-26 md:w-32 md:h-32 lg:w-44 lg:h-44 xl:w-56 xl:h-56 text-brand-cyan blur-sm top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 rotate-6 animate-orb-float magnetic-hover will-change-transform'
      style='animation-delay: 5s; transform: translateZ(0);'
    />

    <!-- Additional decorative icons - progressively revealed -->
    <Icon
      name='material-symbols:trending-up-rounded'
      class='hidden sm:block absolute w-14 h-14 md:w-20 md:h-20 lg:w-24 lg:h-24 xl:w-32 xl:h-32 text-brand-cyan/60 blur-sm top-1/3 right-1/5 rotate-45 animate-orb-float will-change-transform'
      style='animation-delay: 2.5s; transform: translateZ(0);'
    />

    <Icon
      name='material-symbols:groups-rounded'
      class='hidden md:block absolute w-16 h-16 lg:w-22 lg:h-22 xl:w-28 xl:h-28 2xl:w-40 2xl:h-40 text-brand-purple/50 blur-sm bottom-1/3 left-1/5 -rotate-30 animate-orb-float will-change-transform'
      style='animation-delay: 4.5s; transform: translateZ(0);'
    />
  </div>

  <!-- Main Content with Sequential Animations - Mobile-first approach -->
  <div class='relative layer-content w-full flex flex-col justify-center items-center px-4 sm:px-6 md:px-8 lg:px-12 py-12 sm:py-16 md:py-20 isolation-isolate'>
    <div class='w-full max-w-xs sm:max-w-2xl md:max-w-4xl lg:max-w-6xl xl:max-w-7xl mx-auto text-center overflow-visible'>
      <!-- Enhanced Status Badge - Mobile optimized -->
      <div class='animate-fade-in animate-stagger-1 mb-4 sm:mb-6 md:mb-8'>
        <div
          class='inline-flex items-center justify-center bg-brand-card/20 backdrop-blur-md border border-brand-cyan/10 shadow-lg shadow-brand-cyan/10 rounded-full px-3 sm:px-4 md:px-6 py-1.5 sm:py-2 md:py-3 transition-all duration-300 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-brand-pink/30'
        >
          <div class='relative flex items-center justify-center w-2.5 h-2.5 sm:w-3 sm:h-3 md:w-4 md:h-4 mr-1.5 sm:mr-2 md:mr-3'>
            <div class='absolute inline-flex w-full h-full rounded-full bg-brand-cyan opacity-75 animate-ping'></div>
            <div class='relative inline-flex w-1 h-1 sm:w-1.5 sm:h-1.5 md:w-2 md:h-2 rounded-full bg-brand-cyan'></div>
          </div>
          <span class='text-text-muted font-medium text-xs sm:text-sm md:text-base lg:text-lg'>Conectando marcas con audiencias en vivo</span>
        </div>
      </div>

      <!-- Subtle Stats Preview - Mobile-first -->
      <div class='animate-fade-in animate-stagger-1.5 mb-6 sm:mb-8 md:mb-10'>
        <div class='flex flex-wrap items-center justify-center gap-4 sm:gap-6 md:gap-8 text-xs sm:text-sm md:text-base'>
          <!-- Stat 1: Streamers -->
          <div class='flex items-center gap-1.5 sm:gap-2 text-text-muted/70 font-medium tracking-wide'>
            <div class='w-1.5 h-1.5 sm:w-2 sm:h-2 rounded-full bg-brand-pink/60 animate-pulse'></div>
            <span class='bg-gradient-to-r from-brand-pink/80 to-brand-purple/80 bg-clip-text text-transparent'>+50 streamers</span>
          </div>

          <!-- Separator -->
          <div class='hidden sm:block w-px h-3 sm:h-4 bg-gradient-to-b from-transparent via-text-muted/30 to-transparent'></div>

          <!-- Stat 2: Satisfaction -->
          <div class='flex items-center gap-1.5 sm:gap-2 text-text-muted/70 font-medium tracking-wide'>
            <div class='w-1.5 h-1.5 sm:w-2 sm:h-2 rounded-full bg-brand-cyan/60 animate-pulse' style='animation-delay: 0.5s;'></div>
            <span class='bg-gradient-to-r from-brand-cyan/80 to-brand-purple/80 bg-clip-text text-transparent'>94% satisfacción</span>
          </div>

          <!-- Separator -->
          <div class='hidden md:block w-px h-3 sm:h-4 bg-gradient-to-b from-transparent via-text-muted/30 to-transparent'></div>

          <!-- Stat 3: Active Campaigns -->
          <div class='flex items-center gap-1.5 sm:gap-2 text-text-muted/70 font-medium tracking-wide'>
            <div class='w-1.5 h-1.5 sm:w-2 sm:h-2 rounded-full bg-brand-purple/60 animate-pulse' style='animation-delay: 1s;'></div>
            <span class='bg-gradient-to-r from-brand-purple/80 to-brand-pink/80 bg-clip-text text-transparent'>Campañas activas</span>
          </div>
        </div>
      </div>

      <!-- Main Hero Heading with Glow Effect - Mobile-first -->
      <div class='animate-text-reveal animate-stagger-2 mb-4 sm:mb-6 md:mb-8'>
        <FluentHeading level={1} size='4xl' animation='glow-pulse' gradient='none' align='center' delay={400} class='leading-tight px-2 sm:px-4 md:px-6'>
          Tu proyecto frente a una <span class='bg-gradient-to-r from-brand-pink via-brand-cyan to-brand-purple bg-clip-text text-transparent animate-gradient-shift bg-size-200'
            >audiencia real</span
          >
        </FluentHeading>
      </div>

      <!-- Enhanced Description - Mobile optimized -->
      <div class='animate-slide-up animate-stagger-3 mb-6 sm:mb-8 md:mb-10'>
        <FluentText size='lg' variant='muted' align='center' maxWidth='4xl' margin='lg' class='leading-relaxed text-text-light/90 backdrop-blur-sm px-2 sm:px-4 md:px-6'>
          Conecta con una red de <strong class='bg-gradient-to-r from-brand-pink via-brand-cyan to-brand-purple bg-clip-text text-transparent font-bold'
            >streamers de audiencias reales</strong
          >, pequeñas y medianas, para maximizar el impacto de tus promociones de manera orgánica y auténtica.
        </FluentText>
      </div>

      <!-- Enhanced Call to Action Buttons - Mobile-first responsive with equal width -->
      <div class='buttons-equal-width animate-scale-in animate-stagger-4 mb-8 sm:mb-12 md:mb-16 lg:mb-20 px-2 sm:px-0'>
        <FluentHeroButton
          href='#packages'
          variant='hero-primary'
          size='xl'
          icon='material-symbols:rocket-launch-rounded'
          iconPosition='left'
          text='Ver Paquetes'
          effect='glow-pulse'
          delay={800}
          class='button-text-control'
        />

        <FluentHeroButton
          href='#how-it-works'
          variant='hero-secondary'
          size='xl'
          icon='material-symbols:rocket-launch-outline-rounded'
          iconPosition='left'
          text='Cómo Funciona'
          effect='float'
          delay={1000}
          class='button-text-control'
        />
      </div>
    </div>
  </div>

  <!-- Enhanced Scroll Indicator - Mobile optimized -->
  <div class='absolute bottom-4 sm:bottom-6 md:bottom-8 left-1/2 -translate-x-1/2 layer-interactive z-20'>
    <div
      class='flex flex-col items-center gap-1.5 sm:gap-2 md:gap-3 group scroll-indicator cursor-pointer'
      onclick="document.getElementById('how-it-works')?.scrollIntoView({behavior: 'smooth'})"
    >
      <!-- Modern scroll indicator with enhanced design -->
      <div
        class='relative w-5 h-8 sm:w-6 sm:h-10 md:w-8 md:h-14 border border-brand-cyan/40 rounded-full flex flex-col justify-start items-center py-1 sm:py-1.5 md:py-2 group-hover:border-brand-pink/60 transition-all duration-300 bg-brand-card/10 backdrop-blur-sm shadow-md shadow-brand-cyan/10'
      >
        <div class='w-0.5 h-1.5 sm:w-0.5 sm:h-2 md:w-1 md:h-3 bg-brand-pink rounded-full animate-bounce group-hover:bg-brand-cyan transition-colors duration-300'></div>
      </div>

      <!-- Enhanced label with glow effect -->
      <div class='flex flex-col items-center'>
        <span class='text-brand-cyan/80 text-xs sm:text-sm font-medium group-hover:text-brand-pink/80 transition-all duration-300 tracking-wide'>Descubre más</span>
        <div
          class='w-3 sm:w-4 md:w-6 h-0.5 bg-gradient-to-r from-transparent via-brand-cyan/50 to-transparent group-hover:via-brand-pink/50 transition-all duration-300 mt-0.5 sm:mt-1'
        >
        </div>
      </div>
    </div>
  </div>
</FluentSection>
