---
import FluentSection from "../shared/astro/FluentSection.astro";
import FluentBadge from "../shared/astro/FluentBadge.astro";
import FluentGlowHeading from "../shared/astro/FluentGlowHeading.astro";
import FluentText from "../shared/astro/FluentText.astro";
import FluentHeroButton from "../shared/astro/FluentHeroButton.astro";
import FluentParticles from "../shared/astro/FluentParticles.astro";
import { Icon } from "astro-icon/components";
---

<FluentSection
  id="hero"
  backgroundVariant="default"
  depth="deep"
  animation="none"
  padding="xl"
  align="center"
  class="relative min-h-screen flex items-center bg-hero-radial overflow-hidden w-full"
>
  <!-- Enhanced Background Effects -->
  <div class="absolute inset-0 layer-background">
    <!-- Animated gradient background -->
    <div class="absolute inset-0 bg-gradient-to-br from-brand-darker via-brand-dark to-brand-darker opacity-90"></div>
    
    <!-- Main background image with parallax effect -->
    <div 
      class="absolute inset-0 bg-cover bg-center opacity-5 blur-sm animate-pulse-glow" 
      style="background-image: url('/src/assets/background.svg');"
    ></div>
  </div>

  <!-- Floating Orbs Layer -->
  <div class="absolute inset-0 layer-effects">
    <!-- Large gradient orbs -->
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-gradient-radial from-brand-pink/20 to-transparent rounded-full blur-3xl animate-orb-float" style="animation-delay: 0s;"></div>
    <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-gradient-radial from-brand-purple/25 to-transparent rounded-full blur-3xl animate-orb-float" style="animation-delay: 2s;"></div>
    <div class="absolute top-1/2 right-1/3 w-64 h-64 bg-gradient-radial from-brand-cyan/15 to-transparent rounded-full blur-2xl animate-orb-float" style="animation-delay: 4s;"></div>
  </div>

  <!-- Floating Particles -->
  <FluentParticles 
    count={12}
    speed="medium"
    colors={['pink', 'purple', 'cyan']}
    sizes={['sm', 'md']}
  />

  <!-- Enhanced Background Icons -->
  <div class="absolute inset-0 layer-icons opacity-8">
    <!-- Gaming icons with advanced animations -->
    <Icon 
      name="material-symbols:gamepad-outline-rounded" 
      class="absolute w-32 h-32 md:w-48 md:h-48 text-brand-purple blur-sm top-1/4 left-1/4 -translate-x-1/2 -translate-y-1/2 rotate-12 animate-orb-float magnetic-hover" 
      style="animation-delay: 1s;"
    />
    
    <Icon 
      name="material-symbols:play-circle-outline-rounded" 
      class="absolute w-40 h-40 md:w-64 md:h-64 text-brand-pink blur-sm bottom-1/4 right-1/4 translate-x-1/2 translate-y-1/2 -rotate-12 animate-orb-float magnetic-hover" 
      style="animation-delay: 3s;"
    />
    
    <Icon 
      name="material-symbols:share" 
      class="absolute w-36 h-36 md:w-56 md:h-56 text-brand-cyan blur-sm top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 rotate-6 animate-orb-float magnetic-hover" 
      style="animation-delay: 5s;"
    />
    
    <!-- Additional decorative icons -->
    <Icon 
      name="material-symbols:trending-up-rounded" 
      class="absolute w-24 h-24 md:w-32 md:h-32 text-brand-cyan/60 blur-sm top-1/3 right-1/5 rotate-45 animate-orb-float" 
      style="animation-delay: 2.5s;"
    />
    
    <Icon 
      name="material-symbols:groups-rounded" 
      class="absolute w-28 h-28 md:w-40 md:h-40 text-brand-purple/50 blur-sm bottom-1/3 left-1/5 -rotate-30 animate-orb-float" 
      style="animation-delay: 4.5s;"
    />
  </div>

  <!-- Main Content with Sequential Animations -->
  <div class="relative layer-content w-full max-w-7xl mx-auto px-4">
    <!-- Enhanced Status Badge -->
    <div class="animate-fade-in animate-stagger-1">
      <div class="inline-flex items-center justify-center bg-brand-card/30 backdrop-blur-md border-2 border-brand-cyan/20 shadow-2xl shadow-brand-cyan/20 rounded-full px-6 py-3 mb-8 transition-all duration-300 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-brand-pink/50">
        <div class="relative flex items-center justify-center w-4 h-4 mr-3">
          <div class="absolute inline-flex w-full h-full rounded-full bg-brand-cyan opacity-75 animate-ping"></div>
          <div class="relative inline-flex w-2 h-2 rounded-full bg-brand-cyan"></div>
        </div>
        <Icon name="material-symbols:local-fire-department-rounded" class="w-5 h-5 text-brand-pink mr-2" />
        <span class="text-text-muted font-medium text-lg">Conectando marcas con audiencias en vivo</span>
      </div>
    </div>

    <!-- Main Hero Heading with Glow Effect -->
    <div class="animate-text-reveal animate-stagger-2">
      <FluentGlowHeading
        level={1}
        size="6xl"
        glow="intense"
        animation="glow-pulse"
        gradient="none"
        align="center"
        delay={400}
        class="mb-8 leading-tight"
      >
        Tu proyecto frente a una <span class="bg-gradient-to-r from-brand-pink via-brand-cyan to-brand-purple bg-clip-text text-transparent animate-gradient-shift bg-size-200">audiencia real</span>
      </FluentGlowHeading>
    </div>

    <!-- Enhanced Description -->
    <div class="animate-slide-up animate-stagger-3">
      <FluentText
        size="xl"
        variant="muted"
        align="center"
        maxWidth="4xl"
        margin="lg"
        class="leading-relaxed text-text-light/90 backdrop-blur-sm"
      >
        Conecta con una red de <strong class="bg-gradient-to-r from-brand-pink via-brand-cyan to-brand-purple bg-clip-text text-transparent font-bold">streamers de audiencias reales</strong>, pequeñas y medianas, para maximizar el impacto de tus promociones de manera orgánica y auténtica.
      </FluentText>
    </div>
    
    <!-- Enhanced Call to Action Buttons -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-6 animate-scale-in animate-stagger-4">
      <FluentHeroButton
        href="#packages"
        variant="hero-primary"
        size="xl"
        icon="material-symbols:rocket-launch-rounded"
        iconPosition="left"
        text="Ver Paquetes"
        effect="glow-pulse"
        delay={800}
        class="w-full sm:w-auto min-w-[200px]"
      />
      
      <FluentHeroButton
        href="#how-it-works"
        variant="hero-secondary"
        size="xl"
        icon="material-symbols:rocket-launch-outline-rounded"
        iconPosition="left"
        text="Cómo Funciona"
        effect="float"
        delay={1000}
        class="w-full sm:w-auto min-w-[200px]"
      />
    </div>

    <!-- Interactive Stats Preview -->
    <div class="mt-20 grid grid-cols-1 md:grid-cols-3 gap-8 animate-fade-in animate-stagger-5 max-w-5xl mx-auto">
      <div class="bg-brand-card/20 backdrop-blur-sm rounded-2xl p-8 border border-brand-purple/20 hover:border-brand-pink/40 transition-all duration-500 hover:scale-105 stats-card group">
        <div class="flex items-center justify-center mb-4">
          <Icon name="material-symbols:groups-rounded" class="w-8 h-8 text-brand-pink group-hover:scale-110 transition-transform duration-300" />
        </div>
        <div class="text-4xl font-bold text-brand-pink mb-3 text-center">500+</div>
        <div class="text-text-muted text-center font-medium">Streamers Activos</div>
      </div>
      
      <div class="bg-brand-card/20 backdrop-blur-sm rounded-2xl p-8 border border-brand-cyan/20 hover:border-brand-purple/40 transition-all duration-500 hover:scale-105 stats-card group">
        <div class="flex items-center justify-center mb-4">
          <Icon name="material-symbols:visibility-rounded" class="w-8 h-8 text-brand-cyan group-hover:scale-110 transition-transform duration-300" />
        </div>
        <div class="text-4xl font-bold text-brand-cyan mb-3 text-center">50K+</div>
        <div class="text-text-muted text-center font-medium">Audiencia Combinada</div>
      </div>
      
      <div class="bg-brand-card/20 backdrop-blur-sm rounded-2xl p-8 border border-brand-pink/20 hover:border-brand-cyan/40 transition-all duration-500 hover:scale-105 stats-card group">
        <div class="flex items-center justify-center mb-4">
          <Icon name="material-symbols:thumb-up-rounded" class="w-8 h-8 text-brand-purple group-hover:scale-110 transition-transform duration-300" />
        </div>
        <div class="text-4xl font-bold text-brand-purple mb-3 text-center">95%</div>
        <div class="text-text-muted text-center font-medium">Satisfacción Cliente</div>
      </div>
    </div>
  </div>

  <!-- Enhanced Scroll Indicator -->
  <div class="absolute bottom-12 left-1/2 -translate-x-1/2 layer-interactive animate-bounce z-20">
    <div class="flex flex-col items-center gap-2 group scroll-indicator" onclick="document.getElementById('how-it-works')?.scrollIntoView({behavior: 'smooth'})">
      <!-- Modern scroll indicator -->
      <div class="relative w-6 h-10 border-2 border-brand-cyan/60 rounded-full flex justify-center group-hover:border-brand-pink/80 transition-all duration-300">
        <div class="w-1 h-3 bg-brand-cyan rounded-full mt-2 animate-pulse group-hover:bg-brand-pink transition-colors duration-300"></div>
      </div>
      
      <!-- Scroll text with icon -->
      <div class="flex items-center gap-1 text-xs text-brand-cyan/70 group-hover:text-brand-pink/90 transition-all duration-300">
        <Icon name="material-symbols:keyboard-arrow-down-rounded" class="w-4 h-4 animate-bounce" />
        <span class="font-medium tracking-wide">Explorar</span>
      </div>
      
      <!-- Subtle glow effect -->
      <div class="absolute inset-0 bg-brand-cyan/10 rounded-full blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10"></div>
    </div>
  </div>
</FluentSection>
